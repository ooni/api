[Unit]
Description=OONI API
Wants=network-online.target
After=network-online.target

[Service]
ExecStart=/usr/bin/gunicorn3 \
  --config file:/etc/ooni/api.gunicorn.py \
  ooniapi.wsgi
ExecReload=/bin/kill -s HUP $MAINPID
Type=simple
Restart=on-abort
RestartSec=2s
KillMode=mixed
TimeoutStopSec=30

User=ooniapi
Group=ooniapi
ReadOnlyDirectories=/
ReadWriteDirectories=/proc/self
ReadWriteDirectories=/var/lib/ooniapi/

PermissionsStartOnly=true
LimitNOFILE=65536

# Sandboxing
CapabilityBoundingSet=CAP_SETUID CAP_SETGID
SystemCallFilter=~@clock @debug @cpu-emulation @keyring @module @mount @obsolete @raw-io @reboot @swap
NoNewPrivileges=yes
PrivateDevices=yes
PrivateTmp=yes
ProtectHome=yes
ProtectSystem=full
ProtectKernelModules=yes
ProtectKernelTunables=yes

[Install]
WantedBy=multi-user.target
